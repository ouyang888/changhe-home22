page {
  background: #F9F9F9;
}

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #F7F7F7;
  font-size: 14px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  margin: 0 22rpx;
  display: inline-block;
  color: #999999;
}

.tab-item.active {
  color: #EE731E;
  position: relative;
  font-size: 16px;
  font-weight: bold;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

.item-ans {
  width: 94%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: center;
  background: #fff;
  margin: 0 auto;
  padding-left: 40rpx;
  margin-top: 32rpx;
  border-radius: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 24rpx;
  flex-grow: 2;
  color: #B0B0B0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 32rpx;
  color: #000;
  margin-bottom: 36rpx;
  display: flex;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 60rpx;
  border: 2rpx solid #4675F9;
  color: #4675F9;
}

.tab-content {
  /* margin-top: 80rpx; */
}

.scoll-h {
  height: 100%;
}

.order_tab_handle {
  position: relative;
  font-weight: bold;
  color: #FE9F0B;
  font-size: 32rpx;
}

.answerHistory {
  padding-bottom: 26rpx;
  color: #666666;
  font-size: 28rpx;
}

.name image {
  width: 42rpx;
  height: 42rpx;
}

.flex-content {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.name-title {
  color: #2F4006;
  font-size: 28rpx;
  padding-bottom: 12rpx;
  margin-left: 32rpx;
}

.flex-btn {
  display: flex;
  align-items: center;
  float: right;
}

.btn-cl {
  margin-right: 20rpx;
}

.btn-cl button {
  width: 130rpx !important;
  height: 52rpx !important;
  border: 2rpx solid #F36433;
  border-radius: 10rpx;
  color: #EE731E;
  font-size: 24rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap
}

.btn-del button {
  color: #999999;
  border: 2rpx solid #999999;
}

.new-sheet {
  border-radius: 50%;
  background: #F36433;
  color: #fff;
  font-size: 28rpx;
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  z-index: 999;
  right: 0;
  top: 50%;
}

.sheet {
  padding-top: 14rpx;
}

.sheet-font {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.top-tips {
  display: flex;
  color: #D42136;
  font-size: 20rpx;
  background: #F5E3E5;
  width: 94%;
