  height: 34rpx;
}

.tips-content {
  width: 68%;
  padding-top: 13rpx;
  padding-bottom: 12rpx;
}
.tips-title{
  padding-left:30rpx ;
  padding-top: 13rpx;
}
.close{
  padding-top: 18rpx;
  padding-left: 34rpx;
}