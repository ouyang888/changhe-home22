page {
  background: #F9F9F9;
}

.find-bg {
  width: 92%;
  margin: 0 auto;
  background: #fff;
  border-radius: 12rpx;
  margin-top: 30rpx;
}

.conf-box-flex {
  display: flex;
  align-items: center;
  margin: 40rpx;
  border-bottom: 2rpx solid #E4E4E4;
  padding-bottom: 40rpx;
}

.code {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180rpx !important;
  height: 52rpx !important;
  border: 2rpx solid #EE731E;
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #EE731E;
  white-space: nowrap;
}

button[disabled] {
  color: #EE731E !important;
}
.placeholder-input{
  font-size: 24rpx;
}
.input-size{
  font-size: 24rpx;
  width: 80%;
}
.flex-content{
  display: flex;
  align-items: center;
  width: 100%;
  padding-top: 60rpx;
}
.flex-content-psd{
  display: flex;
  align-items: center;
  width: 100%;
}

.loing-btn {
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx auto;
}

.loing-btn button {
  width: 100% !important;
  background: linear-gradient(0deg, #ee6a1e, #FFA520);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 88rpx;
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
}