.picker {
  color: #333333;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 57rpx;
}

.picker text {
  color: #666666;
  font-size: 28rpx;
  padding-right: 50rpx;
  padding-left: 38rpx;
}

.picker-img {
  width: 14rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  padding-right: 35rpx;
}

.picker-img image {
  width: 100%;
  height: 100%;
}

.picker-tips {
  font-size: 28rpx;
  color: #333;
  font-family: PingFang SC;
  font-weight: 400;
  padding-left: 198rpx;
}

.section-flex {
  display: flex;
  align-items: center;
}

.title {
  color: #666666;
  font-size: 28rpx;
  padding-right: 50rpx;
  padding-left: 38rpx;
  width: 18%;
  text-align: center;
}

.add-input {
  color: #999999;
  font-size: 24rpx;
}

.section-flex input {
  border-bottom: 1px solid #E4E4E4;
  padding-bottom: 36rpx;
  padding-top: 36rpx;
  width: 66%;
}

.add-text {
  margin-top: 48rpx;
  padding-bottom: 56rpx;
}

.add-text textarea {
  height: 120rpx;
  margin-left: 156rpx;
  font-size: 24rpx;
  padding-left: 42rpx;
  padding-top: 18rpx;
  border: 1px solid #E4E4E4;
  width: 64%;
}

.text-font {
  font-size: 24rpx;
  color: #999999;
}

.upload-title {
  color: #666666;
  font-size: 28rpx;
  padding-left: 32rpx;
  padding-top: 62rpx;
  padding-bottom: 36rpx;
}

.upload-tips {
  font-size: 24rpx;
  color: #999999;
  font-family: PingFang SC;
  font-weight: 400;
  padding-left: 32rpx;
  padding-bottom: 62rpx;
}

.img-wrap {
  font-size: 30rpx;
  color: #33373E;
  margin-bottom: 10rpx;
}

.img-wrap .txt {
  margin-bottom: 20rpx;
}

.img-wrap .imglist {
  display: flex;
  flex-wrap: wrap;
  margin-left: 28rpx;
  padding-bottom: 43rpx;
}

.img-wrap .imglist .item {
  width: 150rpx;
  height: 150rpx;
  margin-right: 22rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.img-wrap .imglist .last-item {
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 146rpx;
  border: 2rpx dashed #8B97A9;
  box-sizing: border-box;
}

.img-wrap .imglist .item image {
  width: 100%;
  height: 100%;
}

.img-wrap .imglist .item .delete {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -14rpx;
  right: -12rpx;
}

.rules-title {
  color: #666666;
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-top: 60rpx;
  padding-bottom: 26rpx;
}

.add-rules {
  padding-bottom: 56rpx;
}

.add-rules textarea {
  height: 270rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
  padding-top: 18rpx;
  border: 1px solid #E4E4E4;
  width: 90%;
  margin: 0 auto;
}

.clear {
  position: relative;
  top: -56rpx;
  right: 42rpx;
}

.clear text {
  color: #999999;
  font-size: 24rpx;
}

.flex-btn {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-bottom: 62rpx;
  margin-top: 65rpx;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 200rpx;
  height: 88rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F36433;
  border: 2rpx solid #EE731E;
  border-radius: 44rpx;
}
.sub-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 200rpx;
  height: 88rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7F7F7;
  border-radius: 44rpx;
  background: linear-gradient(0deg, #D42136, #EE731E);
}