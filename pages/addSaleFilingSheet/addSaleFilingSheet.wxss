page {
  background: #F9F9F9;
}

.add-top-box {
  width: 94%;
  background: #fff;
  border-radius: 20rpx;
  margin: 21rpx auto;
}

.change-flex {
  display: flex;
  align-items: center;
}

.change-left {
  font-size: 28rpx;
  color: #666666;
}

/* .picker:last-child{
  padding-bottom: 57rpx;
